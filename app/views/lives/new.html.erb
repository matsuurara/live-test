<%= form_with model: @live, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"live_title" %>
  </div>

  <div class="field">
    <%= f.label :info, "概要" %><br />
    <%= f.text_area :info, class: :form__text, id:"live_info" %>
  </div>

  <div class="actions">
    <%= f.submit "ライブを開始する", class: :form__btn  %>
  </div>
<% end %>